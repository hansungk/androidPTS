<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#ff101010">

    <Button
        android:id="@+id/button_getVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffffff"
        android:text="영상 불러오기" />
    
    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_getVideo"
        android:orientation="vertical" >
    
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:layout_marginBottom="10dp"
	        android:src="@drawable/ic_action_search" />
	    
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:src="@drawable/ic_action_search" />
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="4" >

        <Button
            android:id="@+id/button_1Frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:text="▶" />
        
        <Button
            android:id="@+id/button_5Frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:text="▶▶" />
        
        <Button
            android:id="@+id/button_10Frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:text="▶▶▶" />
        
        <Button
            android:id="@+id/button_Process"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:text="Process" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_CPUState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsLayout"
        android:layout_alignRight="@+id/buttonsLayout"
        android:textColor="#ffffffff"
        android:text="PTS for Android" />
    
    <TextView
        android:id="@+id/setDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_CPUState"
        android:layout_alignRight="@+id/textView_CPUState"
        android:textColor="#ffffffff"
        android:text="18.44m" />

    <TextView
        android:id="@+id/referee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/speedgun"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="40dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/speedgun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setDistance"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>